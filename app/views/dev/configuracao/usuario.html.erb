<% if @usuario_logado.master == true or @usuario_logado.admin == true %>
<!-- Main -->
<main>
  <section class="profile-bg-section parallax section_ground" >
  </section>
  <section class="profile-container gray-bg">
    <div class="container">
      <div class="row align-items-start">
        <div class="col-lg-4 col-xl-3">
          <%= render 'dev/configuracao/section', {section_order: "users"} %>
        </div>
        <div class="col-lg-8 col-xl-9">
          <div class="profile-content-area m-40px-tb card card-body">
            <div class="border-bottom-1 border-color-dark-gray m-35px-b p-35px-b">
              <h3 class="m-5px-b"> <i class="fas fa-cogs"></i> Administrar Usuários </h3>
              <h6 class="body-color font-w-500 m-25px-b">Data: <%= Time.now.to_s_br %></h6>
              <p>Todos os usuários que contém cadastro no sistema. Somente Usuario master tem acesso para inserir usuário como administrador</p>
              <div class="nav">
              </div>
            </div>
            <div class="border-bottom-1 border-color-dark-gray m-35px-b p-35px-b">
              <h5>Usuários</h5>
              <div class="row">
                <% @usuarios.each do |usuario| %>
                  <div class="col-sm-6 m-15px-tb">
                    <div class="card p-15px">
                      <div class="media align-items-center">
                        <div class="only-icon-60 theme-color">
                          <%= image_tag(usuario.imagem_user, class: 'rounded-circle') %>
                        </div>
                        <div class="media-body p-15px-l">
                          <span class="font-small">Desde: <%= usuario.created_at.to_s_br %></span>
                          <h6 class="m-0px"><%= usuario.nome %></h6>
                          <p class="m-0px"><%= usuario.email %></p>
                          <div class="row">
                            <div class=" col col-md-4">
                              <a class="m-btn m-btn-sm m-btn-theme-light m-btn-radius mr-1" href="#">Banir</a>
                            </div>
                            <div class="col col-md">
                              <a class="m-btn m-btn-sm m-btn-theme-light m-btn-radius " href="#">Não Admin</a><!-- se for master -->
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- main end -->
<% end %>