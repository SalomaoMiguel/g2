<!-- Main -->
<main>
  <section class="profile-bg-section parallax section_ground" >
  </section>
  <section class="profile-container gray-bg">
    <div class="container">
      <div class="row align-items-start">
        <div class="col-lg-4 col-xl-3">
          <%= render 'dev/configuracao/section', {section_order: "profile_edit"} %>
        </div>
        <div class="col-lg-8 col-xl-9">
          <div class="profile-content-area m-40px-tb card card-body">
            <div class="border-bottom-1 border-color-dark-gray m-35px-b p-35px-b">
              <h5>Dados do usuário</h5>
              <p>Aqui você poderá alterar seus dados.</p>
              <%= form_with(model: @usuario_logado, url: {action: :profile_edit}, html: {class: 'row', role: "form"}, multipart: true) do |form| %>
                <div class="row m-25px-b">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Nome</label>
                      <%= form.text_field :nome , class: 'form-control'  %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">E-mail</label>
                      <%= form.text_field :email , class: 'form-control'  %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Imagem</label>
                      <%= form.file_field :imagem_user, class: 'form-control'  %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Administrador</label>
                      <input type="email" placeholder="<%= @usuario.admin ? "Sim" : "Não"%>" class="form-control" disabled="true">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Usuário Master</label>
                      <input type="email" placeholder="<%= @usuario.master ? "Sim" : "Não"%>" class="form-control" disabled="true">
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="form-control-label">Idioma</label>
                      <input type="email" placeholder="<%= @usuario.idioma ? "Português" : "Espanhol"%>" class="form-control" disabled="true">
                    </div>
                  </div>
                </div>
                <div class="p-20px-t">
                  <%= form.submit "Salvar",  data: {disable_with: "Enviando..."}, class:'m-btn m-btn-radius m-btn-theme' %>
                </div>
             <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- main end -->